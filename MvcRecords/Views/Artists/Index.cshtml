@model IEnumerable<MvcRecords.Models.Artist>

@{
    ViewBag.Title = "Index";
}

<h2>Wykonawcy</h2>

<p>
    @Html.ActionLink("Dodaj", "Create")
    @using (Html.BeginForm("Index", "Artists", FormMethod.Get))
    {
    <p>
        Kraj pochodzenia: @Html.DropDownList("artistCountry", "Wybierz")
        Wykonawca: @Html.TextBox("SearchString")
        <input type="submit" value="Szukaj" />
    </p>
}
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
